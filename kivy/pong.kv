#:import utils kivy.utils

<PongBall>
    size: 50,50
    canvas:
        Ellipse:
            pos : self.pos
            size: self.size


<PongGame>:
    ball: pong_ball
    canvas.before:
        Color:
            rgb: 255,255,0
        Rectangle:
            pos: self.pos
            size: self.size

    canvas.after:

        Rectangle:
            pos : self.center_x - 5, 0
            size: 10,self.height

        Color:
            rgb : 255,255,255

    Label:
        font_size : 70
        center_x : root.width / 4
        top : root.top - 50
        text : "0"

    Label:
        font_size : 70
        center_x : root.width * 3/4
        top : root.top - 50
        text : "0"

    PongBall:
        id: pong_ball
        center : self.parent.center

